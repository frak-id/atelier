{
  "name": "@frak-sandbox/manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --target=bun --outfile=dist/server.js --minify",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/schemas/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@frak-sandbox/shared": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "env-paths": "^3.0.0",
    "nanoid": "^5.1.6",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8"
  }
}
