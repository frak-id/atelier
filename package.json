{
  "name": "atelier",
  "version": "0.1.3",
  "type": "module",
  "private": true,
  "scripts": {
    "deploy": "bun run scripts/deploy.ts",
    "build:cli": "bun run --filter @frak/atelier-cli build:linux",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --build",
    "knip": "knip",
    "version:bump": "bun run scripts/bump-version.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.24",
    "knip": "^5.83.0",
    "terser": "^5.46.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "infra/*"
  ],
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0"
  }
}
